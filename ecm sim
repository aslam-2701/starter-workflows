name: Build Windows EXE

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: windows-latest
    steps:
      - uses: actions/checkout@v3

      - name: Setup .NET
        uses: actions/setup-dotnet@v3
        with:
          dotnet-version: '6.0.x'

      - name: Restore dependencies
        run: dotnet restore

      - name: Build WinForms
        run: dotnet publish EcuSimulator.WinForms/EcuSimulator.WinForms.csproj -c Release -r win-x64 --self-contained true -p:PublishSingleFile=true -o publish/winforms

      - name: Build WPF
        run: dotnet publish EcuSimulator.Wpf/EcuSimulator.Wpf.csproj -c Release -r win-x64 --self-contained true -p:PublishSingleFile=true -o publish/wpf

      - name: Upload Artifacts
        uses: actions/upload-artifact@v3
        with:
          name: ecu-simulator-builds
          path: publish